<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAllCaps="true"
        tools:text="owner_name"
        style="?android:attr/textAppearanceListItem"/>
    <TextView
        android:id="@+id/pet_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/owner_name"
        android:text="Number of pets:"
        style="?android:attr/textAppearanceListItemSmall"
        android:textColor="?android:attr/textColorSecondaryInverse"/>
    <TextView
        android:id="@+id/pet_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/pet_count_label"
        android:layout_below="@id/owner_name"
        tools:text="pet_count"
        style="?android:attr/textAppearanceListItemSmall"/>
    <TextView
        android:id="@+id/pet_names_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pet_count_label"
        android:text="Names:"
        style="?android:attr/textAppearanceListItemSmall"
        android:textColor="?android:attr/textColorSecondaryInverse"/>
    <TextView
        android:id="@+id/pet_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/pet_names_label"
        android:layout_below="@id/pet_count_label"
        tools:text="pet_names"
        style="?android:attr/textAppearanceListItemSmall"/>
</RelativeLayout>